---
export const prerender = false;
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const { title = "TinkerTrack", isLoggedIn = false, isAdmin = true, activeTab = '', activeSubTab = '' } = Astro.props;

const adminTabs = [
	{ label: 'Subscriptions', href: '/admin/subscriptions', icon: 'subscription' },
	{ label: 'Products', href: '/admin/products', icon: 'product' },
	{ label: 'Reporting', href: '/admin/reporting', icon: 'report' },
	{ label: 'Users/contacts', href: '/admin/users', icon: 'users' }
];

const configSubItems = [
	{ label: 'Attribute', href: '/admin/config/attribute' },
	{ label: 'Recurring Plan', href: '/admin/config/recurring-plan' },
	{ label: 'Quotation Template', href: '/admin/config/quotation-template' },
	{ label: 'Payments', href: '/admin/config/payments' },
	{ label: 'Discounts', href: '/admin/config/discounts' },
	{ label: 'Taxes', href: '/admin/config/taxes' }
];
---

<!doctype html>
<html lang="en" data-theme="tinkertrack">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,500;9..144,600;9..144,700&family=Source+Sans+3:wght@300;400;500;600&display=swap"
		/>
	</head>
	<body class="bg-base-100 text-base-content min-h-screen flex flex-col admin-scope">
		<Navbar isLoggedIn={isLoggedIn} isAdmin={isAdmin} />
		<div class="flex-1 flex">
			<aside class="hidden lg:flex w-56 flex-col border-r border-base-200/70 bg-base-200/40 py-6 overflow-y-auto">
				<div class="px-5 mb-6">
					<p class="text-xs uppercase tracking-widest text-base-content/50 font-medium">Admin console</p>
				</div>
				<nav class="flex-1 px-3">
					<ul class="menu menu-sm gap-1">
						{adminTabs.map((tab) => (
							<li>
								<a
									class={`flex items-center gap-3 rounded-xl px-3 py-2.5 text-sm transition-colors ${
										tab.label === activeTab
											? 'bg-primary text-primary-content font-medium'
											: 'hover:bg-base-300/60 text-base-content/70'
									}`}
									href={tab.href}
								>
									{tab.icon === 'subscription' && (
										<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
											<path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
										</svg>
									)}
									{tab.icon === 'product' && (
										<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
											<path stroke-linecap="round" stroke-linejoin="round" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
										</svg>
									)}
									{tab.icon === 'report' && (
										<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
											<path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
										</svg>
									)}
									{tab.icon === 'users' && (
										<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
											<path stroke-linecap="round" stroke-linejoin="round" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
										</svg>
									)}
									<span>{tab.label}</span>
								</a>
							</li>
						))}
					</ul>

					<!-- Configuration section (always expanded) -->
					<div class="mt-6 pt-4 border-t border-base-300/60">
						<div class="flex items-center gap-3 px-3 py-2 text-sm text-base-content/70">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
								<path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
								<path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
							</svg>
							<span class="font-medium">Configuration</span>
						</div>
						<ul class="menu menu-sm gap-0.5 pl-4">
							{configSubItems.map((item) => (
								<li>
									<a
										class={`rounded-lg px-3 py-2 text-sm transition-colors ${
											item.label === activeSubTab
												? 'bg-primary/10 text-primary font-medium'
												: 'hover:bg-base-300/50 text-base-content/60'
										}`}
										href={item.href}
									>
										{item.label}
									</a>
								</li>
							))}
						</ul>
					</div>
				</nav>
			</aside>

			<main class="flex-1 flex flex-col overflow-x-hidden">
				<div class="lg:hidden sticky top-16 z-10 border-b border-base-200/70 bg-base-100/95 backdrop-blur px-4 py-3">
					<div class="flex items-center gap-2 overflow-x-auto pb-1">
						{adminTabs.map((tab) => (
							<a
								class={`badge whitespace-nowrap ${tab.label === activeTab ? 'badge-primary' : 'badge-outline'} px-4 py-3 text-sm`}
								href={tab.href}
							>
								{tab.label}
							</a>
						))}
						{configSubItems.map((item) => (
							<a
								class={`badge whitespace-nowrap ${item.label === activeSubTab ? 'badge-primary' : 'badge-ghost'} px-3 py-3 text-xs`}
								href={item.href}
							>
								{item.label}
							</a>
						))}
					</div>
				</div>
				<slot />
			</main>
		</div>
		<Footer />
		<script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>

<style is:global>
	/* Admin form input sizing */
	.admin-scope .input,
	.admin-scope .select,
	.admin-scope .textarea {
		height: 2.75rem;
		min-height: 2.75rem;
		border-radius: 0.9rem;
		font-size: 0.95rem;
	}

	/* Force form-control labels to stack vertically (label on TOP, input below) */
	.admin-scope label.form-control {
		display: flex !important;
		flex-direction: column !important;
		align-items: flex-start !important;
		gap: 0.5rem !important;
	}

	/* Ensure inputs take full width */
	.admin-scope label.form-control > .input,
	.admin-scope label.form-control > .select,
	.admin-scope label.form-control > .textarea,
	.admin-scope label.form-control > div.input,
	.admin-scope label.form-control > .flex {
		width: 100% !important;
		align-self: stretch !important;
	}

	/* Helper/hint text styling */
	.admin-scope .label-text-alt {
		display: block;
		font-size: 0.75rem;
		color: oklch(55% 0.02 60);
		margin-top: 0.25rem;
	}

	/* Number inputs - hide ugly native spinners */
	.admin-scope input[type='number'].number-input,
	.admin-scope .input input[type='number'] {
		-moz-appearance: textfield;
		appearance: textfield;
	}

	.admin-scope input[type='number'].number-input::-webkit-inner-spin-button,
	.admin-scope input[type='number'].number-input::-webkit-outer-spin-button,
	.admin-scope .input input[type='number']::-webkit-inner-spin-button,
	.admin-scope .input input[type='number']::-webkit-outer-spin-button {
		-webkit-appearance: none;
		appearance: none;
		margin: 0;
	}
</style>
