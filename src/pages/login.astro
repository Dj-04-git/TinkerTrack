---
import Layout from '../layouts/Layout.astro';
---

<Layout title="TinkerTrack • Login">
	<main>
		<section class="relative overflow-hidden">
			<div class="pointer-events-none absolute inset-0">
				<div
					class="absolute -top-20 left-10 h-64 w-64 rounded-full bg-primary/25 blur-3xl"
				></div>
				<div
					class="absolute bottom-0 right-0 h-80 w-80 rounded-full bg-secondary/20 blur-3xl"
				></div>
			</div>

			<div class="mx-auto grid max-w-6xl gap-10 px-6 py-14 lg:grid-cols-2 lg:items-center">
				<div>
					<p class="badge badge-outline">Member access</p>
					<h1 class="font-display mt-4 text-4xl font-semibold tracking-tight sm:text-5xl">
						Sign in with focus
					</h1>
					<p class="mt-4 text-base-content/70">
						A warm, editorial layout with calm spacing so your users feel collected while
						signing in.
					</p>
					<div class="mt-8 grid gap-4">
						<div class="flex items-center gap-3 text-sm text-base-content/70">
							<span class="badge badge-neutral">Secure</span>
							<span>Token-ready sessions, coming soon.</span>
						</div>
						<div class="flex items-center gap-3 text-sm text-base-content/70">
							<span class="badge badge-neutral">Minimal</span>
							<span>Only essentials, no distractions.</span>
						</div>
					</div>
				</div>

				<div class="w-full max-w-md">
					<div class="card bg-base-200/70 shadow-2xl backdrop-blur">
						<div class="card-body">
							<h2 class="font-display text-2xl">Welcome back</h2>
							<p class="text-sm text-base-content/70">
								Enter your credentials to continue.
							</p>
							<form class="mt-6 grid gap-5" action="#" method="post">
								<div class="form-control">
									<label class="label">
										<span class="label-text">Email address</span>
									</label>
									<input
										type="email"
										placeholder="you@track.app"
										class="input input-bordered w-full"
									/>
								</div>
								<div class="form-control">
									<label class="label">
										<span class="label-text">Password</span>
										<a class="link-hover text-xs" href="#">Forgot?</a>
									</label>
									<input
										type="password"
										placeholder="••••••••"
										class="input input-bordered w-full"
									/>
								</div>
								<button class="btn btn-primary" type="submit">Sign in</button>
							</form>
							<div class="divider">Or</div>
							<button class="btn btn-outline">Continue with Google</button>
							<p class="mt-4 text-sm text-base-content/70">
								No account yet? <a class="link-hover" href="/register">Create one</a>
							</p>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>
