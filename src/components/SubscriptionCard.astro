---
const { subscription } = Astro.props;
---

<a
	class="card group bg-base-200/70 shadow-lg backdrop-blur transition duration-200 hover:-translate-y-1 hover:shadow-2xl"
	href={`/product/${subscription.id}`}
>
	<div class="card-body gap-4">
		<div class="flex flex-wrap items-start justify-between gap-3">
			<div>
				<h3 class="font-display text-xl">{subscription.name}</h3>
				<p class="text-sm text-base-content/70">{subscription.category}</p>
			</div>
			<div class="flex gap-2">
				{subscription.badges.map((badge) => (
					<span class="badge badge-outline">{badge}</span>
				))}
			</div>
		</div>
		<p class="text-base-content/70">{subscription.description}</p>
		<div class="flex flex-wrap items-center gap-3 text-sm text-base-content/70">
			<span>{subscription.seats}</span>
			<span class="opacity-40">•</span>
			<span>{subscription.frequency}</span>
		</div>
		<div class="card-actions items-center justify-between">
			<div class="text-lg font-semibold">
				${subscription.pricing.monthly}
				<span class="text-sm font-normal text-base-content/70">/mo</span>
			</div>
			<span class="text-sm font-medium text-base-content/70 group-hover:text-base-content">
				View details →
			</span>
		</div>
	</div>
</a>
