---
/**
 * PageHeader â€” Reusable hero banner used at the top of every interior page.
 * Renders a badge, serif headline, supporting paragraph, and optional action slot.
 * Includes the standard radial background glows for depth.
 */
interface Props {
	badge: string;
	title: string;
	description: string;
}

const { badge, title, description } = Astro.props;
const hasActions = Astro.slots.has('actions');
---

<div class="pointer-events-none absolute inset-0">
	<div class="absolute -top-20 left-10 h-72 w-72 rounded-full bg-primary/15 blur-3xl"></div>
	<div class="absolute bottom-0 right-10 h-80 w-80 rounded-full bg-secondary/15 blur-3xl"></div>
</div>

<div class="flex flex-wrap items-start justify-between gap-4">
	<div>
		<p class="badge badge-outline">{badge}</p>
		<h1 class="font-display mt-4 text-4xl font-semibold tracking-tight sm:text-5xl">
			{title}
		</h1>
		<p class="mt-4 text-base-content/70">{description}</p>
	</div>
	{hasActions && (
		<div class="flex flex-wrap gap-3">
			<slot name="actions" />
		</div>
	)}
</div>
